<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :location %>
    <div class="datetime">
      <%= f.input :starts_at %>
    </div>
    <%= f.input :description %>
    <%= f.input :image %>
    <%= f.input :category %>
    <%= f.input :link %>
    <%= f.input :ticket_description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
