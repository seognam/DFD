<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :location %>
    <div class="datetime">
      <%= f.input :starts_at %>
    </div>
    <%= f.input :description %>
    <%= f.input :category %>
    <%= f.input :link %>
    <%= f.input :ticket_description %>
    </br>
    <p>
    <%= f.label "Upload Event Image" %>
    <%= f.file_field :image %>
    or choose image URL
    <%= f.text_field :remote_image_url %>
    </p>
    </br>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
