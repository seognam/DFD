<% content_for :hero do %>
<div class="image-gradient-dynamic">
  <%= image_tag "top_photo.jpg" %>
  <div class="overlay"></div>
  <div class="copy">
    <h2>The</h2>
    <h1>Spartan Dischords</h1>
  </div>
</div>
<% end %>

<head>
  <link href='//fonts.googleapis.com/css?family=Questrial' rel='stylesheet' type='text/css'>
  <link href='//fonts.googleapis.com/css?family=Sanchez:400italic,400' rel='stylesheet' type='text/css'>
</head>

<div class="admin-link">
<% if current_user %>
  <ul>
  <div class="flash-success">
    <span>Add a <u><%= link_to "New Event", new_event_path %> </u></span>
  </div>
  </ul>
<% end %>
</div>

<% if @next_event %>
<div class="event">
  <%= image_tag "events/letsduet.jpg" %>
  <div class="summary">
    <article class="type-system-geometric">
      <h1><%= @next_event.title %></h1>
      <p><%= truncate(@next_event.description, length: 300, separator: ' ' )%></p>
      <h2><%=  link_to "More Info >", event_path(@next_event)  %> </h2>
    </article>

  </div>
</div>
<% end %>
